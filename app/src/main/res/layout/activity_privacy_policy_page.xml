<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header with Logo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logoblack"
                    android:scaleType="fitCenter"
                    android:contentDescription="Let's Link Logo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Privacy Policy"
                    android:textSize="36sp"
                    android:textColor="@color/orange_primary"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Introductory Statement -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your privacy and safety are our priority."
                android:textSize="18sp"
                android:textColor="@color/orange_primary"
                android:textStyle="italic"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4sp"
                android:layout_marginBottom="24dp" />

            <!-- Policy Content Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"

                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="289dp"
                    android:layout_height="551dp"
                    android:orientation="vertical"

                    android:padding="24dp">

                    <!-- Paragraph 1 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/we_collect_only_what_s_necessary_to_make_planning_trips_with_friends_easy_and_safe_such_as_your_profile_info_trip_details_and_if_enabled_your_location_for_group_tracking_this_data_is_used_solely_for_features_like_coordinating_plans_sharing_updates_and_letting_friends_see_where_you_are_if_you_choose"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Paragraph 2 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/your_personal_information_and_location_are_never_shared_without_your_permission_all_data_is_encrypted_during_storage_and_transfer"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Paragraph 3 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/we_do_not_sell_or_rent_your_data_to_anyone_you_can_view_update_or_delete_your_information_at_any_time_through_the_app_s_settings"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Paragraph 4 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="6sp"
                        android:text="By using this app, you agree to these practices and our mission to make group travel safer and more fun for everyone."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:alpha="0.3"
                android:layout_marginBottom="24dp" />

            <!-- Done Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/done_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/orange_primary"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>