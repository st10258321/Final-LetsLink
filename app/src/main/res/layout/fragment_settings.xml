<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="49.67dp"
    android:background="@color/black"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="90dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="198dp"
                android:layout_height="176dp"
                android:contentDescription="settings logo"
                android:gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/settings" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/settings_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="24dp"/>

            <!--change language start -->
            <androidx.cardview.widget.CardView
                android:id="@+id/language_card_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/language_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <LinearLayout
                        android:id="@+id/language_card_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_card_background_orange"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/change_language"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/language_arrow"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_expand_more"
                            android:contentDescription="expand arrow"
                            app:tint="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/language_dropdown_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="@drawable/rounded_card_background_orange"
                        android:paddingTop="8dp"
                        android:paddingBottom="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <!-- ENGLISH -->
                        <LinearLayout
                            android:id="@+id/lang_row_english"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="20dp"
                                android:src="@drawable/flag_english"
                                android:contentDescription="flag english" />

                            <TextView
                                android:id="@+id/lang_text_english"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="@string/lang_english"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/lang_check_english"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check"
                                android:contentDescription="selected"
                                android:visibility="visible"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <!-- ZULU -->
                        <LinearLayout
                            android:id="@+id/lang_row_zulu"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="20dp"
                                android:src="@drawable/flag_za"
                                android:contentDescription="flag zulu" />

                            <TextView
                                android:id="@+id/lang_text_zulu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="@string/lang_zulu"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/lang_check_zulu"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check"
                                android:contentDescription="selected"
                                android:visibility="gone"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <!-- AFRIKAANS -->
                        <LinearLayout
                            android:id="@+id/lang_row_afrikaans"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="20dp"
                                android:src="@drawable/flag_za"
                                android:contentDescription="flag afrikaans" />

                            <TextView
                                android:id="@+id/lang_text_afrikaans"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="@string/lang_afrikaans"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/lang_check_afrikaans"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check"
                                android:contentDescription="selected"
                                android:visibility="gone"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <!-- SHONA -->
                        <LinearLayout
                            android:id="@+id/lang_row_shona"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="20dp"
                                android:src="@drawable/flag_shona"
                                android:contentDescription="flag shona" />

                            <TextView
                                android:id="@+id/lang_text_shona"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="@string/lang_shona"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/lang_check_shona"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check"
                                android:contentDescription="selected"
                                android:visibility="gone"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <!-- CHINESE -->
                        <LinearLayout
                            android:id="@+id/lang_row_chinese"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="20dp"
                                android:src="@drawable/flag_chinese"
                                android:contentDescription="flag chinese" />

                            <TextView
                                android:id="@+id/lang_text_chinese"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="@string/lang_chinese"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/lang_check_chinese"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check"
                                android:contentDescription="selected"
                                android:visibility="gone"
                                app:tint="@color/white" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--change language end -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_card_background_orange"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/notifications_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/notifications"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/notifications_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:trackTint="@color/white"
                        app:thumbTint="@color/gray"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_card_background_orange"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/click_noise_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/click_noise"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/click_noise_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:trackTint="@color/white"
                        app:thumbTint="@color/gray"  />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_card_background_orange"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/share_location_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/share_location"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/share_location_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:trackTint="@color/white"
                        app:thumbTint="@color/gray" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_card_background_orange"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/sync_database_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sync_database"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sync_database_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:trackTint="@color/white"
                        app:thumbTint="@color/gray" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_card_background_orange"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/view_privacy_policy_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/view_privacy_policy"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/orange_primary"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_save"
                android:drawableTint="@color/white"
                android:drawablePadding="5dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
