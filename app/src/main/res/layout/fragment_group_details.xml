<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_group_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/black_outline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header_group_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#444444"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="31dp"
                android:elevation="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_group_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/txt_group_title"
                    android:textColor="#F44A22"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Group Details"/>

                <LinearLayout
                    android:id="@+id/layout_group_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingRight="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_view_members"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginEnd="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="ðŸ‘¤"/>

                    <TextView
                        android:id="@+id/btn_group_settings"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="âš™ï¸"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_group_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_group_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/whitebox_lower_edges" />


                <LinearLayout
                    android:id="@+id/layout_group_text"
                    android:layout_width="331dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group Name"
                        android:textColor="#F44A22"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_group_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description of the group"
                        android:textColor="#F44A22"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_group_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:autoLink="web"
                        android:background="#334A90E2"
                        android:clickable="true"
                        android:ellipsize="middle"
                        android:focusable="true"
                        android:linksClickable="true"
                        android:padding="8dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:text="Group Link"
                        android:textColor="#4A90E2"
                        android:textIsSelectable="true"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_members_label"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="1dp"
                android:text="Members"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/membersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/member_item" />

            <TextView
                android:id="@+id/txt_group_activities_label"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="31dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Voting Results"/>

            <androidx.recyclerview.widget.RecyclerView
                android:padding="0dp"
                android:id="@+id/groupResultsRV"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_voting_result" />

            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_vote_on_events"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rec_outline_black"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:minHeight="48dp"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/txt_vote_on_events"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Voting"
                        android:textColor="#F44A22"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btn_start_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/orange_rectangle"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:minHeight="48dp"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/txt_start_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Chat"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="70dp"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/groupEventsText"
                        android:text="Group Upcoming Events"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginLeft="9dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/groupEventsRV"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>